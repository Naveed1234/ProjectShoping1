@model ProjectShoping1.Models.UserAccount

@{
    ViewBag.Title = "Login";
}
<link href="~/Content/Login.css" rel="stylesheet" />
<body id="body">

    {





    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()




        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="box">
            <h2>SigIn user</h2>
            <form>
                <div class="inputbox">
                    @Html.EditorFor(m => m.Name, "", new { htmlAttributes = new { required = "" } })
                    @Html.ValidationMessageFor(m => m.Name)
                    <label>Name</label>

                </div>
                <br />

                <div class="inputbox">
                    @Html.EditorFor(m => m.Password, "", new { htmlAttributes = new { required = "" } })
                    @Html.ValidationMessageFor(m => m.Password)
                    <label>Password</label>

                </div>
                <br />


                <input type="submit" class="btn1" value="Login" /><br />
                <br />
                <a href="~/UserAccounts/Register">Create a new account</a>
            </form>

        </div>

    }


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>


